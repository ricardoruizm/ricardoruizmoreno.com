---
import Layout from '../layouts/Layout.astro';

const professionalExperience = [
  {
    role: "Director de Proyectos de Tecnología",
    company: "Nombre de la Empresa, Ciudad de México",
    period: "Enero 2020 - Presente",
    description: "Aquí va una descripción concisa de tus logros y responsabilidades clave en este puesto. Por ejemplo: Lideré un equipo de 15 personas en el desarrollo y lanzamiento de 3 productos digitales, resultando en un incremento del 40% en la retención de usuarios."
  },
  {
    role: "Puesto Anterior",
    company: "Otra Empresa, Ciudad de México",
    period: "Junio 2017 - Diciembre 2019",
    description: "Descripción de tus logros y responsabilidades en el puesto anterior. Enfócate en resultados cuantificables."
  }
];

const education = [
    {
        degree: "Máster en Diseño y Gestión de Proyectos Tecnológicos",
        institution: "Nombre de la Universidad",
        period: "2016 - 2017"
    },
    {
        degree: "Licenciatura en Mercadotecnia",
        institution: "Nombre de la Universidad",
        period: "2010 - 2015"
    }
];

const skills = [
    "Gestión de Proyectos (Agile, Scrum)", "Estrategia de Producto Digital", "Análisis de Datos",
    "Marketing Digital (SEO, SEM)", "E-commerce", "UI/UX", "Google Analytics", "Sanity.io", "Astro", "Tailwind CSS"
];
---

<Layout title="CV - Ricardo Ruiz Moreno">
  <div class="container mx-auto px-6 py-24 pt-40">
    <div class="max-w-4xl mx-auto">
      <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-16">
        <div>
          <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight">
            <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-teal-400">
              Currículum
            </span>
          </h1>
          <p class="mt-2 text-xl text-gray-400">Mi trayectoria profesional y académica.</p>
        </div>
        <a 
          href="/Ricardo-Ruiz-Moreno-CV.pdf" 
          download
          class="mt-6 md:mt-0 bg-green-500 text-white font-semibold px-6 py-3 rounded-full hover:bg-green-600 transition-colors flex items-center space-x-2 shrink-0"
        >
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-download"><path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path><polyline points="7 10 12 15 17 10"></polyline><line x1="12" y1="15" x2="12" y2="3"></line></svg>
          <span>Descargar CV</span>
        </a>
      </div>

      <section class="mb-12 animate-on-scroll">
        <h2 class="text-3xl font-bold text-white mb-8 border-l-4 border-green-400 pl-4">Experiencia Profesional</h2>
        <div class="space-y-8">
          {professionalExperience.map(job => (
            <div class="p-6 border border-gray-800 rounded-lg">
              <div class="flex justify-between items-start">
                <div>
                  <h3 class="text-xl font-bold text-green-400">{job.role}</h3>
                  <p class="text-gray-300 font-semibold">{job.company}</p>
                </div>
                <p class="text-gray-500 text-sm shrink-0 ml-4">{job.period}</p>
              </div>
              <p class="mt-4 text-gray-400">{job.description}</p>
            </div>
          ))}
        </div>
      </section>

      <section class="mb-12 animate-on-scroll">
        <h2 class="text-3xl font-bold text-white mb-8 border-l-4 border-green-400 pl-4">Educación</h2>
        <div class="space-y-6">
           {education.map(edu => (
            <div>
              <h3 class="text-xl font-bold text-green-400">{edu.degree}</h3>
              <p class="text-gray-300">{edu.institution} <span class="text-gray-500">| {edu.period}</span></p>
            </div>
          ))}
        </div>
      </section>

      <section class="animate-on-scroll">
        <h2 class="text-3xl font-bold text-white mb-8 border-l-4 border-green-400 pl-4">Habilidades Técnicas y Profesionales</h2>
        <div class="flex flex-wrap gap-3">
          {skills.map(skill => (
            <span class="bg-gray-800 text-green-300 text-sm font-medium px-4 py-2 rounded-full">{skill}</span>
          ))}
        </div>
      </section>
    </div>
  </div>
</Layout>