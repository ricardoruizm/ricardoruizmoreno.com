            <div class="mt-6 grid grid-cols-1 sm:grid-cols-2 gap-4 text-sm">
              {about.details.map(detail => (
                <div class="flex flex-col">
                  <span class="font-semibold text-gray-400">{detail.label}:</span>
                  {detail.href ? (
                    <a href={detail.href} class="text-green-400 hover:underline break-all">{detail.value}</a>
                  ) : (
                    <span class="text-gray-200">{detail.value}</span>
