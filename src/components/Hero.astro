<section class="min-h-screen flex items-center justify-center text-center bg-gray-900 px-4">
  <div class="container mx-auto">
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-teal-400">
        Ricardo Ruiz Moreno
      </span>
    </h1>
    <div class="mt-6 text-lg md:text-xl text-gray-300 h-16">
      <span id="typed-subtitle"></span>
    </div>
    <div class="mt-10">
      <a href="#proyectos" class="border border-green-400 text-green-400 px-8 py-3 rounded-full font-semibold hover:bg-green-400 hover:text-gray-900 transition-all duration-300">
        Ver mis proyectos
      </a>
    </div>
  </div>
</section>

<script>
  import Typed from 'typed.js';

  const strings = [
    "Máster en Diseño y Gestión de Proyectos Tecnológicos",
    "Mercadólogo",
    "Ubicado en Ciudad de México",
    "Entusiasta de la tecnología, marketing y comercio electrónico.",
    "Innovación.",
  ];

  const options = {
    strings: strings,
    typeSpeed: 50,
    backSpeed: 25,
    loop: true,
    smartBackspace: true,
    showCursor: true,
    cursorChar: '_',
  };

  // Asegurarnos de que el script se ejecute solo después de que el DOM esté cargado
  document.addEventListener('DOMContentLoaded', () => {
    // También nos aseguramos de que el elemento exista antes de inicializar Typed
    const element = document.getElementById('typed-subtitle');
    if (element) {
      new Typed(element, options);
    }
  });
</script>