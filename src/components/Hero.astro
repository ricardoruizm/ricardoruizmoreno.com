<section class="flex items-center justify-center text-center bg-gray-900 px-4 h-[calc(100vh-160px)] min-h-[600px]">
  <div class="container mx-auto">
    <h1 class="text-5xl md:text-7xl font-extrabold tracking-tight">
      <span class="bg-clip-text text-transparent bg-gradient-to-r from-green-400 to-teal-400">
        Ricardo Ruiz Moreno
      </span>
    </h1>
    <div class="mt-6 text-lg md:text-xl text-gray-300 h-16">
      <span id="typed-subtitle"></span>
    </div>
    {/* El botón "Ver mis proyectos" ha sido eliminado de aquí. */}
  </div>
</section>

<script>
  import Typed from 'typed.js';

  const strings = [
    "Máster en Diseño y Gestión de Proyectos Tecnológicos",
    "Mercadólogo",
    "Ubicado en Ciudad de México",
    "Entusiasta de la tecnología, marketing y comercio electrónico.",
    "Innovación.",
  ];

  const options = {
    strings: strings,
    typeSpeed: 50,
    backSpeed: 25,
    loop: true,
    smartBackspace: true,
    showCursor: true,
    cursorChar: '_',
  };
  
  // Volvemos al método más simple y confiable (DOMContentLoaded)
  // para asegurar que todo funcione sin necesidad de configuraciones extra.
  document.addEventListener('DOMContentLoaded', () => {
    const element = document.getElementById('typed-subtitle');
    if (element) {
      // Si ya existe una instancia de Typed, la destruimos antes de crear una nueva.
      if (element.typed) {
        element.typed.destroy();
      }
      // Creamos la nueva instancia.
      element.typed = new Typed(element, options);
    }
  });
</script>