---
interface Props {
	title: string;
	category: string;
	imageUrl: string;
	href: string;
}

const { title, category, imageUrl, href } = Astro.props;
---

<a href={href} class="group relative block w-full aspect-square rounded-lg overflow-hidden shadow-2xl bg-gray-800">
  <img
    src={imageUrl}
    alt={`Imagen del proyecto ${title}`}
    class="w-full h-full object-cover transition-transform duration-500 ease-in-out group-hover:scale-110"
    loading="lazy"
    width="680"
    height="680"
  />
  <div class="absolute inset-0 bg-black bg-opacity-60 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex flex-col justify-end p-6">
    {/* Estos elementos ahora tienen una transición de transformación y opacidad */}
    <h3 class="text-white text-2xl font-bold opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300">
      {title}
    </h3>
    <p class="text-green-400 text-sm opacity-0 transform translate-y-4 group-hover:opacity-100 group-hover:translate-y-0 transition-all duration-300 delay-100">
      {category}
    </p>
  </div>
</a>